{
  "name": "root",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "dumi dev",
    "dev": "dumi dev",
    "build": "pnpm --filter \"./packages/*\" build",
    "build:core": "pnpm --filter bizify-core build",
    "test": "lerna run test --stream",
    "test:core": "lerna run test --stream --scope bizify-core",
    "test:cov": "lerna run test:cov --stream",
    "prepare": "husky install && dumi setup",
    "pub": "npm run build && lerna publish",
    "docs:build": "dumi build && node ./scripts/add_base.js",
    "docs:deploy": "gh-pages -d docs-dist",
    "pub:doc": "npm run docs:build && npm run docs:deploy"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/lodash.set": "^4.3.9",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "@umijs/lint": "^4.1.2",
    "@umijs/test": "^4.1.2",
    "antd": "^4.24.15",
    "bizify": "workspace:^",
    "dumi": "^2.2.17",
    "eslint": "^8.57.0",
    "father": "^4.4.0",
    "father-build": "^1.22.5",
    "gh-pages": "^6.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.4.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^16.2.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "umi": "^4.1.2"
  }
}
