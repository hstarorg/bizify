{
  "name": "root",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter \"./packages/*\" build",
    "build:core": "pnpm --filter bizify-core build",
    "dev": "dumi dev",
    "docs:build": "dumi build && node ./scripts/add_base.js",
    "docs:deploy": "gh-pages -d docs-dist",
    "prepare": "husky install && dumi setup",
    "pub": "npm run build && lerna publish",
    "pub:doc": "npm run docs:build && npm run docs:deploy",
    "start": "dumi dev",
    "test": "lerna run test --stream",
    "test:core": "lerna run test --stream --scope bizify-core",
    "test:cov": "lerna run test:cov --stream"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "umi": "^4.4.4"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/lodash.set": "^4.3.9",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@umijs/lint": "^4.4.4",
    "@umijs/test": "^4.4.4",
    "antd": "^4.24.16",
    "bizify": "workspace:^",
    "bizify-core": "workspace:^",
    "dumi": "^2.4.17",
    "eslint": "^8.57.1",
    "father": "^4.5.1",
    "father-build": "^1.22.5",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.1.9",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stylelint": "^16.12.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
